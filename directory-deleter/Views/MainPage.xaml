<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:directory_deleter.ViewModels"
             x:Class="directory_deleter.Views.MainPage"
             Title="MainPage">
    <ContentPage.BindingContext>
        <viewModels:DirectoryViewModel/>
    </ContentPage.BindingContext>
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Editor Grid.Row="0" Grid.Column="0" x:Name="Locations" Text="{Binding AllLocations}"
                Placeholder="Enter locations "
                HeightRequest="100">

        </Editor>
        <Editor Grid.Row="1" Grid.Column="0" x:Name="Folders" Text="{Binding AllFolders}"
                Placeholder="Enter the folders that are to be deleted"
                HeightRequest="100">

        </Editor>
        <Button Grid.Row="2" Grid.Column="0"
                    Text="Delete"
                    Command="{Binding DeleteCommand}"/>
    </Grid>
</ContentPage>